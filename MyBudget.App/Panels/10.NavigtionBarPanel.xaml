<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="SampleApp.Panels.NavigtionBarPanel"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="{DynamicResource BackgroundColor}"
    xmlns:md="clr-namespace:Material.Components.Maui;assembly=Material.Components.Maui">

    <md:NavigationBar>
        <md:NavigationBarItem
            ActivedIcon="Star"
            Icon="Globe"
            Text="label">
            <md:Label
                    FontSize="36"
                    HorizontalOptions="Center"
                    Text="Page 1"
                    VerticalOptions="Center" />
        </md:NavigationBarItem>
        <md:NavigationBarItem
            ActivedIcon="Star"
            Icon="Globe"
            Text="label">
            <md:Label
                    FontSize="36"
                    HorizontalOptions="Center"
                    Text="Page 2"
                    VerticalOptions="Center" />
        </md:NavigationBarItem>
        <md:NavigationBarItem
            ActivedIcon="Star"
            Icon="Globe"
            Text="label">
            <md:Label
                    FontSize="36"
                    HorizontalOptions="Center"
                    Text="Page 3"
                    VerticalOptions="Center" />
        </md:NavigationBarItem>
        <md:NavigationBarItem
            ActivedIcon="Star"
            Icon="Globe"
            Text="label">
            <md:Label
                    FontSize="36"
                    HorizontalOptions="Center"
                    Text="Page 4"
                    VerticalOptions="Center" />
        </md:NavigationBarItem>
    </md:NavigationBar>
</ContentView>